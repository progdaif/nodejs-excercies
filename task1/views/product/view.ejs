<div class="row">
    <div class="col-md-12">
        <h4 style="text-align:center;">Show Products</h4>
        <h6><a href="/create">                             <button class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Add"><i class="fa fa-table"></i></button>
            Add New Product</a></h6>
    </div>
</div>
<table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Quantity</th>
        <th scope="col">Brand</th>
        <th scope="col">Added Date</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <% for(let i=0; i < data.length; i++) { %>
            <tr>
                <th scope="row"><%= i+1 %></th>
                <td><%= data[i].name %></td>
                <td><%= data[i].quantity %></td>
                <td><%= data[i].brand %></td>
                <td><%= data[i].created_at %></td>
                <td>
                    <!-- Call to action buttons -->
                    <ul class="list-inline m-0">
                        <li class="list-inline-item">
                            <a href="/edit/<%= data[i].id %>">
                            <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <form method="POST" action="/delete/<%= data[i].id %>?_method=DELETE" onclick="return confirm('Are you sure you want to delete this Product?');">
                                <button class="btn btn-danger btn-sm rounded-0" type="submit" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button>
                            </form>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>
    </tbody>
  </table>